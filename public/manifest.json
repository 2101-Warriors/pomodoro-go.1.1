{
  "name": "Pomdoro-Go",
  "description": "Build an Extension!",
  "version": "1.0",
  "manifest_version": 3,
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "identity",
    "identity.email",
    "unlimitedStorage",
    "scripting",
    "<all_urls>",
    "*//*/"
  ],
  "host_permissions": ["http://*/", "https://*/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
